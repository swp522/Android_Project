                android:layout_marginLeft="5dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:background="#E0E6F8">

            </RadioButton>

            <RadioButton
                android:id="@+id/b2rad"
                android:layout_marginTop="5dp"
